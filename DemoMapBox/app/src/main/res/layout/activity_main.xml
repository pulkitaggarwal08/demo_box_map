<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo_mapbox.pulkit.MainActivity">

    <Button
        android:id="@+id/btn_show_custom_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Show Map Custom Info"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_draw_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_show_custom_info"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Draw Line and map navigation"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_draw_line"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Show Traffic"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_traffic"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Show Buildings"
        android:textAllCaps="false" />


</RelativeLayout>
